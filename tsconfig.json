{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["DOM", "ES5", "ES6", "ES2015.Promise"],
    "sourceMap": true,
    "noImplicitAny": true,
    "importHelpers": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "survey-core": ["./src/entries/core.ts"],
      "survey-angular-ui": [
        "build/survey-angular-ui/survey-angular-ui",
        "build/survey-angular-ui"
      ]
    }    
  },
  "exclude": ["src/entries/**/*.ts"],
  "include": ["src/**/*.ts"]
}
